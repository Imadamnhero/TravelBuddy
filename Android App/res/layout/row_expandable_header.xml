<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_of_row"
    android:background="@drawable/bg_row_gradient" >

    <View
        android:id="@+id/line"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/pie_blue" />

    <ImageView
        android:id="@+id/dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:src="@drawable/icon_dropdown" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:text="Food And Drink:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_light_gray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/dropdown"
        android:text="$ 584.13 (57.54%)"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_gray_color"
        android:textStyle="bold" />

</RelativeLayout>